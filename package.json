{
  "name": "root",
  "version": "0.1.0",
  "license": "AGPL-3.0",
  "author": "Parity Technologies <admin@parity.io>",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/paritytech/hardhat-polkadot.git"
  },
  "bugs": "https://github.com/paritytech/hardhat-polkadot/issues",
  "scripts": {
    "build": "pnpm run clean && pnpm --recursive run build",
    "build:dev": "pnpm --recursive run build:dev",
    "clean": "pnpm --recursive run clean",
    "prettier:check": "pnpm run --recursive prettier:check && npx prettier --check 'examples/**/*.{md,yml,ts,js,json}'",
    "prettier:fix": "pnpm run --recursive prettier:fix && npx prettier --write 'examples/**/*.{md,yml,ts,js,json}'",
    "eslint:check": "pnpm run --recursive eslint:check && npx eslint 'examples/**/*'",
    "eslint:fix": "pnpm run --recursive eslint:fix && npx eslint 'examples/**/*' --fix",
    "lint:fix": "pnpm run eslint:fix && pnpm run prettier:fix"
  },
  "devDependencies": {
    "@types/node": "^22.15.3",
    "globals": "^16.0.0",
    "prettier": "^3.3.0",
    "typescript": "^5.8.3"
  },
  "packageManager": "pnpm@9.3.0"
}