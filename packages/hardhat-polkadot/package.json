    "license": "AGPL-3.0",
    "version": "0.0.1",
    "bugs": "https://github.com/paritytech/hardhat-polkadot/issues",
    "homepage": "https://github.com/paritytech/hardhat-polkadot/tree/master/packages/hardhat-polkadot#readme",
    "repository": {
        "directory": "packages/hardhat-polkadot",
        "type": "git",
