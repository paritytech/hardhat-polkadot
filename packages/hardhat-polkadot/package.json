{
    "name": "@parity/hardhat-polkadot",
    "author": "Parity Technologies <admin@parity.io>",
    "license": "AGPL-3.0",
    "version": "0.0.1",
    "bugs": "https://github.com/paritytech/hardhat-polkadot/issues",
    "homepage": "https://github.com/paritytech/hardhat-polkadot/tree/master/packages/hardhat-polkadot#readme",
    "repository": {
        "directory": "packages/hardhat-polkadot",
        "type": "git",
        "url": "https://github.com/paritytech/hardhat-polkadot.git"
    },
    "description": "Polkadot bundle of Hardhat plugins",
    "main": "dist/index.js",
    "publishConfig": {
        "access": "public"
    },
    "types": "dist/index.d.ts",
    "exports": {
        ".": {
            "require": "./dist/index.js",
            "import": "./dist/index.js",
            "types": "./dist/index.d.ts"
        }
    },
    "bin": {
        "hardhat-polkadot": "node ./dist/cli/index.js"
    },
    "keywords": [
        "ethereum",
        "smart-contracts",
        "hardhat",
        "hardhat-plugin",
        "Polkadot"
    ],
    "scripts": {
        "build": "tsc --build .",
        "build:dev": "tsc --build . --watch",
        "clean": "rimraf dist",
        "prettier:check": "prettier --check '**/*.{md,yml,ts,js,json}'",
        "eslint:check": "eslint 'src/**/*.ts'"
    },
    "files": [
        "dist/src/",
        "src/",
        "!**/*.tsbuildinfo",
        "LICENSE",
        "README.md"
    ],
    "dependencies": {
        "@openzeppelin/contracts": "^5.3.0",
        "@parity/hardhat-polkadot-node": "workspace:^",
        "@parity/hardhat-polkadot-resolc": "workspace:^"
    },
    "peerDependencies": {
        "hardhat": "<2.23.0"
    },
    "bundledDependencies": [
        "@parity/hardhat-polkadot-node",
        "@parity/hardhat-polkadot-resolc"
    ],
    "devDependencies": {
        "@eslint/js": "^9.25.0",
        "@nomicfoundation/hardhat-ignition": "^0.15.11",
        "@types/chai": "^5.2.1",
        "@types/node": "^22.14.1",
        "@vitest/coverage-c8": "^0.33.0",
        "@vitest/ui": "^3.1.2",
        "chai": "^5.2.0",
        "eslint": "^9.25.0",
        "globals": "^16.0.0",
        "rimraf": "^6.0.1",
        "typescript": "^5.8.3",
        "typescript-eslint": "^8.30.1",
        "viem": "^2.27.2"
    }
}
